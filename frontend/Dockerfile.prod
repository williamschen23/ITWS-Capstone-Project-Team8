# Build stage
FROM node:24-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build


# Production stage (still Node)
FROM node:24-alpine

WORKDIR /app

# Only copy the dist directory + minimal package files
COPY --from=build /app/dist ./dist
COPY package*.json ./

# Install ONLY production deps needed for preview server
RUN npm ci

EXPOSE 4173

CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0"]
